@model Slider

<div class="col-6">
    <div class="card shadow mb-4">
        <div class="card-header">
            <strong class="card-title">Create Slider</strong>
        </div>
        <div class="card-body">
            <form method="post">

                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control">
                    <span class="btn btn-danger" asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description"  class="form-control" rows="3"></textarea>
                    <span class="btn btn-danger" asp-validation-for="Description"></span>

                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
                <a class="btn btn-secondary text-white mr-2" asp-action="Index">Go Back</a>

            </form>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}